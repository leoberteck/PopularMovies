<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <PreferenceCategory
        android:key="main_page_settings"
        android:title="@string/main_page_preferences_title">

        <ListPreference
            android:key="@string/movie_sort_key"
            android:summary="@string/movie_sort_preference_summary"
            android:title="@string/movie_sort_preference_title"
            android:entries="@array/movie_sort_values_descripton"
            android:entryValues="@array/movie_sort_values" />

        <ListPreference
            android:key="@string/app_theme_key"
            android:summary="@string/app_theme_summary"
            android:title="@string/theme"
            android:entries="@array/app_theme_values_description"
            android:entryValues="@array/app_theme_values"/>
    </PreferenceCategory>
</PreferenceScreen>